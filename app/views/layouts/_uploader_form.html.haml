.container
  %section
    .row
      .container{style: "margin-top:100px;"}
        = simple_form_for :article, url: articles_path, :html => {:multipart => true } do |f|
          .form-group
            = f.input :document, as: :file
          .form-group.form-inline
            = f.text_field :title, class: 'form-control name-input', placeholder: 'title'
            = f.text_field :author, class: 'form-control name-input', placeholder: 'author'
            = f.text_field :volume, class: 'form-control', placeholder: 'volume #'
            = f.text_field :issue, class: 'form-control', placeholder: 'issue #'
            = f.button :submit, 'SUBMIT', class: "btn btn-primary btn-lg round outline"

      = button_to 'update sitemap', {:action => :sitemap, :controller => :articles}, :method => :post
      = render "layouts/pdfs2"
